<Page
    x:Class="Lepo.i18n.Wpf.UnitTests.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
    xmlns:local="clr-namespace:Lepo.i18n.Wpf.UnitTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TestPage"
    d:DataContext="{d:DesignInstance local:TestPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,24">
        <TextBlock x:Name="TestTextBlock" Text="{i18n:StringLocalizer 'Test'}" />
    </Grid>
</Page>